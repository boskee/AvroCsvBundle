{% extends "AvroCsvBundle::layout.html.twig" %}

{% trans_default_domain 'AvroCsvBundle' %}

{% block avro_csv_title %}{{ 'import.title.upload'|trans }}{% endblock avro_csv_title %}

{% block avro_csv_content %}
    <form action="{{ path('avro_csv_import_mapping', {'alias': alias}) }}" method="post" {{ form_enctype(form) }}>
        <div id="error-container"></div>
        <div class="form-content">
            {{ form_row(form.delimiter) }}
            {{ form_row(form.file) }}
            {{ form_row(form.filename) }}
            {{ form_widget(form._token) }}
        </div>
        <div>
            <input type="submit" value="{{ 'import.button.next'|trans }}" />
        </div>
    </form>
{% endblock avro_csv_content %}